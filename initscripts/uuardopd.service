[Unit]
Description=UUARDOPD daemon
After=ardop.service
Requires=ardop.service

[Service]
Type=simple
User=uucp
ExecStart=/usr/bin/uuardopd -c AAAAAA -d AAAAAA -a 127.0.0.1 -p 8515 -t 30
ExecStop=/usr/bin/killall -s QUIT uuardopd
IgnoreSIGPIPE=no
#StandardOutput=null
#StandardError=null
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
